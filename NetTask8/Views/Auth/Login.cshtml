@using NetTask8.Presentation.ViewModels
@model LoginViewModel

<form method="post" asp-action="Login">
    <div>
        <label>Username</label>
        <input name="username" />
    </div>
    <div>
        <label>Password</label>
        <input name="password" type="password" />
    </div>
    <button type="submit">Login</button>
</form>


